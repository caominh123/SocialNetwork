<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    tools:context=".Activity.FindFriendActivity">

    <include
        android:id="@+id/find_friends_bar_layout"
        layout="@layout/app_bar_layout" />

    <RelativeLayout
        android:id="@+id/myLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/find_friends_bar_layout"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/simpleTextID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="20dp"
            android:text="Tìm kiếm bạn bè"
            android:textColor="#4e6384"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/search_box_input"
            android:layout_width="279dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/simpleTextID"
            android:layout_alignParentStart="true"
            android:layout_marginStart="21dp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="21dp"
            android:background="@drawable/input"
            android:ems="10"
            android:hint="Tìm kiếm"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:textColor="#4e6384"
            android:textColorHint="#4e6384" />

        <ImageButton
            android:id="@+id/search_people_friends_button"
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/simpleTextID"
            android:layout_marginStart="0dp"
            android:layout_marginTop="18dp"
            android:layout_toEndOf="@id/search_box_input"
            android:background="#00FFFFFF"
            android:src="@drawable/search" />

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_result_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/myLayout"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"></androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>